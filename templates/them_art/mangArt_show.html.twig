{% extends "base.html.twig" %}

{% block title %}

{% set themeIdsToDisplay = [1, 2, 3] %}
{% set titleDisplayed = false %}
{# Récupération du nom du Thème en fonction de l'ID pour le titre dans l'onglet#}
{% for mangArt in mangArts %}
{% if mangArt.theme.id in themeIdsToDisplay and not titleDisplayed %}
{% set titleDisplayed = true %}
{{ mangArt.theme.name }}
{% endif %}
{% endfor %}
{% endblock %}

{% block body %}
{# {% for mangArt in mangArts %}
{{ dump(mangArt.theme) }}
{% endfor %} #}
{# <button type="button" class="ma-btn">Précédent</button> #}
<div class="container text-center">
    
    <div class="row align-items-start">

        {% set themeIdsToDisplay = [1, 2, 3] %}
        {% set titleDisplayed = false %}
        {# Récupération du nom du Thème en fonction de l'ID #}
        {% for mangArt in mangArts %}
        {% if mangArt.theme.id in themeIdsToDisplay and not titleDisplayed %}
        {% set titleDisplayed = true %}
        <h2 class="ma-h2">{{ mangArt.theme.name }}</h2>
        {% endif %}
        {% endfor %}
        {# Récupération des images en fonction du thème choisi #}
        {% for mangArt in mangArts %}
        <div class="col ma-3D">
            <div class="ma-card">
                <div class="wrapper">
                    <img src="/upload/images/{{mangArt.imageFile}}" class="cover-image" alt="">
                </div>
                {% if mangArt.calqMangart %}
                <img src="/upload/images/{{mangArt.calqMangart}}" class="character" alt="">
                {% endif %}
                <h2 class="ma-name-image">{{ mangArt.name}}</h2>
            </div>
        </div>
        {% endfor %}

    </div>
    <a href="{{ path('them_art') }}">
        <button type="button" class="ma-btn-return">Précédent</button>
    </a>
    
</div>

{% endblock %}


